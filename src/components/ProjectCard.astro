    <div class="projectTitle">
      <div class="projectDate">{date}</div>
      <div class="projectName">{company}</div>
    </div>
    <div>
      <p set:html={description} class="mb-5 projectTextDescription"></p>
      <a href={link}>
        <button class="projectsBtnContainer px-8 py-2">
          <div class="textprojectsBtn">Website â†’</div>
        </button>
      </a>
    </div>
  </div>
  <div class="projectImageContainer">
    {images?.map((img: string) => <img class="projectImage" src={img} />)}
  </div>
</div>
