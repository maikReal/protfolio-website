---
import Icons from "../components/Icons.astro";
import Logo from "./Logo.astro";

const url = new URL(Astro.request.url);
---

<header class="mb-[60px]">
  <div class="flex w-full items-center py-2">
    <!-- Show menu on large screens -->
    <div class="hidden lg:flex flex-row justify-between w-full">
      <div
        class="hidden w-full flex-row items-center md:flex gap-x-[25px] lg:gap-x-[35px]"
      >
        <Logo />
        <div class="flex gap-x-5 lg:gap-x-9">
          <a href="/" aria-current={url.pathname === "/" ? "page" : false}>
            <p
              class="hover:text-accent sm:transition sm:ease-in-out sm:delay-50 sm:hover:translate-y-1 sm:hover:scale-100 sm:duration-300"
            >
              Home
            </p>
          </a>
          <a
            href="/articles"
            aria-current={url.pathname === "/" ? "page" : false}
          >
            <p
              class="hover:text-accent sm:transition sm:ease-in-out sm:delay-50 sm:hover:translate-y-1 sm:hover:scale-100 sm:duration-300"
            >
              Articles
            </p>
          </a>
          <a
            href="/projects"
            aria-current={url.pathname === "/" ? "page" : false}
          >
            <p
              class="hover:text-accent sm:transition sm:ease-in-out sm:delay-50 sm:hover:translate-y-1 sm:hover:scale-100 sm:duration-300"
            >
              Projects
            </p>
          </a>
        </div>
      </div>
      <div class="flex items-center gap-x-[11px]">
        <Icons />
        <a href="mailto:krupin.mihailw@gmail.com">
          <button
            class="border-[1px] border-[#E4E4E4] bg-highlight text-bgColor rounded-[25px] px-5 py-2.5 min-w-[150px] hover:bg-bgColor hover:text-titleColor"
          >
            <div class="text-[14px] font-bold">Contact Me →</div>
          </button>
        </a>
      </div>
    </div>
    <!-- Show hamburger on small screens: -->
    <div class="lg:hidden flex flex-row justify-between w-full">
      <Logo />
      <div
        class="lg:hidden cursor-pointer flex items-center"
        onClick="document.getElementById('mobilemenu').classList.toggle('hidden')"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-6 w-6"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          stroke-width="2"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </div>
    </div>
  </div>
  <!-- Mobile menu -->
  <div
    id="mobilemenu"
    class="flex flex-col p-3 justify-center items-center text-center gap-2 hidden lg:hidden text-[18px] gap-y-[20px]"
  >
    <a href="/" aria-current={url.pathname === "/" ? "page" : false}>
      <p
        class="hover:text-accent sm:transition sm:ease-in-out sm:delay-50 sm:hover:translate-y-1 sm:hover:scale-100 sm:duration-300"
      >
        Home
      </p>
    </a>
    <a href="/articles" aria-current={url.pathname === "/" ? "page" : false}>
      <p
        class="hover:text-accent sm:transition sm:ease-in-out sm:delay-50 sm:hover:translate-y-1 sm:hover:scale-100 sm:duration-300"
      >
        Articles
      </p>
    </a>
    <a href="/projects" aria-current={url.pathname === "/" ? "page" : false}>
      <p
        class="hover:text-accent sm:transition sm:ease-in-out sm:delay-50 sm:hover:translate-y-1 sm:hover:scale-100 sm:duration-300"
      >
        Projects
      </p>
    </a>
    <a href="mailto:krupin.mihailw@gmail.com">
      <button
        class="border-[1px] border-[#E4E4E4] bg-highlight text-bgColor rounded-[25px] px-5 py-2.5"
      >
        <div class="text-[14px] font-bold">Contact Me →</div>
      </button>
    </a>
    <Icons />
  </div>
</header>
